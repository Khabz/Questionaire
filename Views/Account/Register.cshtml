@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

    <div class="jumbotron" data-pages="parallax">
        <div class=" container-fluid   container-fixed-lg sm-p-l-0 sm-p-r-0">
            <div class="inner">

                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Questionaire</a></li>
                    <li class="breadcrumb-item active">Register</li>
                </ol>

            </div>
            <div class="row">
                <div class="center-margin col-lg-8">

                    <div class="card card-default">
                        <div class="card-header ">
                            <div class="card-title">
                                Create an account for free
                            </div>
                        </div>
                        <div class="card-body">
                            <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default required">
                                            <label>First name</label>
                                            <input asp-for="FirstName" type="text" class="form-control">
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default required">
                                            <label>Last name</label>
                                            <input asp-for="LastName" type="text" class="form-control">
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default form-group-default-select2 required">
                                            <label>Gender</label>
                                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" type="text" class="form-control" data-init-plugin="select2"></select>
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default required">
                                            <label>Council Number</label>
                                            <input asp-for="CouncilNumber" type="text" class="form-control">
                                            <span asp-validation-for="CouncilNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-group-default required">
                                    <label>Email</label>
                                    <input asp-for="Email" type="email" class="form-control">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group form-group-default required">
                                    <label>Password</label>
                                    <input asp-for="Password" type="password" class="form-control">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group form-group-default required">
                                    <label>Confirm Password</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-success btn-cons">Register</button>
                                </div>
                                <br />
                                <div>
                                    <p>Already have an account? <a asp-action="Login" asp-controller="Account">Login</a></p>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
