@model IEnumerable<Question>
@{
    ViewData["Title"] = "Questions";
}

    <div class="jumbotron" data-pages="parallax">
        <div class=" container-fluid   container-fixed-lg sm-p-l-0 sm-p-r-0">
            <div class="inner">

                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item active">Questions</li>
                </ol>

            </div>
        </div>

        <div class=" container-fluid   container-fixed-lg bg-white">

            <div class="card card-transparent">
                <div class="card-header ">
                    <div class="card-title">
                        <a asp-action="AddQuestion" asp-controller="Administrator" class="btn btn-primary">Add Question</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="basicTable">
                            <thead>
                                <tr>
                                    <th style="width:70%">Question</th>
                                    <th style="width:20%">Correct Answer</th>
                                    <th style="width:10%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var question in Model)
                                {
                                    <tr>
                                        <td class="v-align-middle ">
                                            <p>@question.QuestionName</p>
                                        </td>
                                        <td class="v-align-middle ">
                                            @if (question.True == true && question.False == false)
                                            {
                                                <p>True</p>
                                            }
                                            else if(question.False == true && question.True == false)
                                            {
                                                <p>False</p>
                                            }
                                        </td>
                                        <td class="v-align-middle">
                                            <button class="btn btn-link">
                                                <i class="pg-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

