@model AddQuestionViewModel
@{
    ViewData["Title"] = "Add Question";
}

    <div class="jumbotron" data-pages="parallax">
        <div class=" container-fluid   container-fixed-lg sm-p-l-0 sm-p-r-0">
            <div class="row">
                <div class="center-margin col-lg-8">

                    <div class="card card-default">
                        <div class="card-header ">
                            <div class="card-title">
                                Add Question and Submit
                            </div>
                        </div>
                        <div class="card-body">
                            <form asp-controller="Administrator" asp-action="AddQuestion" method="post">
                                <div class="form-group form-group-default required">
                                    <label>Type Question</label>
                                    <input asp-for="QuestionName" type="text" class="form-control">
                                    <span asp-validation-for="QuestionName" class="text-danger"></span>
                                </div>
                                <div class="form-group form-group-default required">
                                    <label>Choose the correct answer</label>
                                    <div class="checkbox check-success  ">
                                        <input asp-for="True" type="checkbox" id="checkbox2">
                                        <label for="checkbox2">True</label>
                                    </div>
                                    <div class="checkbox check-danger">
                                        <input asp-for="False" type="checkbox" id="checkbox6">
                                        <label for="checkbox6">False</label>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-success btn-cons">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

